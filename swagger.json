            {
              "name": "Authorization",
              "in": "header",
              "type": "string",
              "description": "Admin token",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Success",
              "schema": {
                "$ref": "#/definitions/car"
              }
            }
          }
        }
      },
